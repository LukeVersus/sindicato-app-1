<!DOCTYPE html>
<html lang="pt-br">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">

	<title><%- process.env.TITLE %></title>

	<!-- Custom fonts for this template-->
	<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
	<link
		href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
		rel="stylesheet">

	<!-- Custom styles for this template-->
	<link href="/css/sb-admin-2.min.css" rel="stylesheet">

	<!-- Custom styles for this page -->
	<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

	<!-- Page Wrapper -->
	<div id="wrapper">

		<!-- Menu -->
		<%- include ../template/menu.ejs %>

		<!-- Content Wrapper -->
		<div id="content-wrapper" class="d-flex flex-column">

			<!-- Main Content -->
			<div id="content">

				<!-- Header -->
				<%- include ../template/topo.ejs %>

				<!-- Begin Page Content -->
				<div class="container-fluid">

					<!-- Page Heading -->
					<h1 class="h3 mb-4 text-gray-800">Inscrição da Turma <%= turma.codigo %></h1>

					<div class="row">

						<!-- Earnings (Monthly) Card Example -->
						<div class="col-xl-12 col-md-12 mb-4">
							<div class="card border-left-primary shadow h-100 py-2">
								<div class="card-body">
									<div class="row no-gutters align-items-center">
										<div class="col mr-2"><br />
											<div class="form-group row">
												<div class="col-sm-4">
													<input hidden type="text" class="form-control" value="<%= turma.codigo %>" disabled>
												</div>
												<div class="col-sm-4">
													Curso
													<input type="text" class="form-control" value="<%= turma.curso %>" disabled>
												</div>
												<div class="col-sm-4">
													Motivo
													<input type="text" class="form-control" value="<%= motivo %>" disabled>
												</div>
											</div><br /><br />
											<h3>Aluno</h3><br/>
											<div class="form-group row">
												<div class="col-sm-4">
													Nome
													<input type="text" class="form-control" value="<%= candidato.nome %>" disabled>
												</div>
												<div class="col-sm-4">
													Lotação
													<input type="text" class="form-control" value="<%= candidato.lotacao %>" disabled>
												</div>
												<div class="col-sm-4">
													Cargo
													<input type="text" class="form-control" value="<%= candidato.cargo %>" disabled>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-4">
													Função
													<input type="text" class="form-control" value="<%= candidato.funcao %>" disabled>
												</div>
												<div class="col-sm-4">
													Área de atuação
													<input type="text" class="form-control" value="<%= candidato.area %>" disabled>
												</div>
												<div class="col-sm-4">
													ID
													<input type="text" class="form-control" value="<%= candidato.matricula %>" disabled>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-4">
													RG
													<input type="text" class="form-control" value="<%= candidato.rg %>" disabled>
												</div>
												<div class="col-sm-4">
													CPF
													<input type="text" class="form-control" value="<%= candidato.cpf %>" disabled>
												</div>
												<div class="col-sm-4">
													Sexo
													<input type="text" class="form-control" value="<%= candidato.sexo %>" disabled>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-4">
													Formação
													<input type="text" class="form-control" value="<%= candidato.formacao %>" disabled>
												</div>
												<div class="col-sm-4">
													Órgão
													<input type="text" class="form-control" value="<%= candidato.orgao %>" disabled>
												</div>
												<div class="col-sm-4">
													Data de Nascimento
													<input type="text" class="form-control" value="<%= candidato.datanascimento %>" disabled>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-4">
													Nome Social
													<input type="text" class="form-control" value="<%= candidato.nomesocial %>" disabled>
												</div>
												<div class="col-sm-4">
													Fone
													<input type="text" class="form-control" value="<%= candidato.fone %>" disabled>
												</div>
												<div class="col-sm-4">
													Celular
													<input type="text" class="form-control" value="<%= candidato.celular %>" disabled>
												</div>
											</div>
											<br>
											<h5>Endereço</h5>
											<div class="form-group row">
												<div class="col-sm-4">
													Logradouro
													<input type="text" class="form-control" value="<%= candidato.endereco.logradouro %>" disabled>
												</div>
												<div class="col-sm-4">
													Número
													<input type="text" class="form-control" value="<%= candidato.endereco.numero %>" disabled>
												</div>
												<div class="col-sm-4">
													Complemento
													<input type="text" class="form-control" value="<%= candidato.endereco.complemento %>" disabled>
												</div>
											</div>
											<div class="form-group row">
												<div class="col-sm-4">
													Bairro
													<input type="text" class="form-control" value="<%= candidato.endereco.bairro %>" disabled>
												</div>
												<div class="col-sm-4">
													CEP
													<input type="text" class="form-control" value="<%= candidato.endereco.cep %>" disabled>
												</div>
												<div class="col-sm-4">
													Contato
													<input type="text" class="form-control" value="<%= candidato.endereco.contato %>" disabled>
												</div>
											</div><br/>
											<div class="form-group row">
												<div class="col-sm-4">
													<a href="/app/turma/<%= turma.id %>/<%= page %>/<%= turma.codigo %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Voltar</a>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</div>
				<!-- /.container-fluid -->

			</div>
			<!-- End of Main Content -->

			<!-- Rodapé -->
			<%- include ../template/rodape.ejs %>

		</div>
		<!-- End of Content Wrapper -->

	</div>
	<!-- End of Page Wrapper -->

	<!-- Scroll to Top Button-->
	<a class="scroll-to-top rounded" href="#page-top">
		<i class="fas fa-angle-up"></i>
	</a>



	<!-- Bootstrap core JavaScript-->
	<script src="/vendor/jquery/jquery.min.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

	<!-- Custom scripts for all pages-->
	<script src="/js/sb-admin-2.min.js"></script>

	<!-- Page level plugins -->
	<script src="/vendor/datatables/jquery.dataTables.min.js"></script>
	<script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

	<!-- Page level custom scripts -->
	<script src="/js/demo/datatables-demo.js"></script>

</body>

</html>